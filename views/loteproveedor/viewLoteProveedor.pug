// En la vista, asegúrate de que la tabla tenga el mismo id que usas en el script
div.table.responsive 
    table#lotesproveedores.table.table-striped.table-bordered

script.
    let lotes = !{JSON.stringify(lotesProveedores)}
    let lotestab

    $(document).ready(function() {
        // Asegúrate de usar el mismo id de la tabla aquí
        lotestab = $('#lotesproveedores').DataTable({
            data: lotes,
            pageLength: 5,
            lengthMenu: [5, 10, 15, 20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
            },
            columns: [
                { data: 'numeroDeLote', title: 'Número de lote' },
                { data: 'Laboratorio.nombreLaboratorio', title: 'Nombre del laboratorio' },
                { data: 'tipoDeVacuna', title: 'Tipo de vacuna' },
                { data: 'nombreComercial', title: 'Nombre comercial de la vacuna' },
                { data: 'cantidadDeLotesInternos', title: 'Cantidad de lotes internos' },
                { data: 'fechaDeFabricacion', title: 'Fecha de fabricación' },
                { data: 'fechaDeVencimiento', title: 'Fecha de vencimiento' },
                { data: 'fechaDeCompra', title: 'Fecha de compra' },
                {
                    data: null, title: 'Opciones',
                    render: function(data, type, row) {
                        return `<button class="btn btn-success btn-sm fa-solid fa-pencil me-2"></button>` +
                            `<button class="btn btn-danger btn-sm fa-solid fa-trash-can"></button>`;
                    }
                }
            ],
        });
    });

    $(document).ready(function() {
        lotestab.on('click', 'button', function(f) {
            let data = lotestab.row(f.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                if(confirm('¿Seguro que desea eliminar este lote?')) {
                    $.post('/lotesproveedores/' + data.numeroDeLote + '?_method=DELETE', function(data) {
                        window.location.href = "/lotesproveedores";
                    })
                }
            } else {
                window.location.href = "/lotesproveedores/" + data.numeroDeLote;
            }
        });
    })

