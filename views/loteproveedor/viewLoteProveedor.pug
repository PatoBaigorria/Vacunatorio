- var title = 'Listado de lotes proveedores'
include ..\includes\layout
block content
body
    div.container.my-4
        div.row
            div.col-sm-13.col-md-13.col-lg-13.col-xl-13
                section#viewLotesProveedores
                    h2 Listado de los lotes proveedores
                    br
                    if messages.success
                        .alert.alert-success.flash-message.fade-in
                            = messages.success
                    if messages.error
                        .alert.alert-danger.flash-message.fade-in
                            = messages.error
                    div.modal#confirmDeleteModal(tabindex="-1" role="dialog")
                        div.modal-dialog(role="document")
                            div.modal-content
                                div.modal-header
                                    h5.modal-title Confirmar la eliminación del lote proveedor
                                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                                        span(aria-hidden="true") &times;
                                div.modal-body
                                    p#mensajeAlerta ¿Está seguro de que desea eliminar este lote proveedor?
                                div.modal-footer
                                    button.btn.btn-secondary(id="cancelDeleteBtn" type="button" data-dismiss="modal") Cancelar
                                    button.btn.btn-danger(id="confirmDeleteBtn" type="button") Confirmar
                    div(style="text-align: left;")
                        a.btn.btn-primary.btn-lg(href="/lotesproveedores/alta") Alta
                        br
                        br
                        div.table.responsive
                            table#lotesproveedores.table.table-striped.table-bordered

script.
    let tabla
    $(document).ready(function() {
        tabla = $('#lotesproveedores').DataTable({
            data: !{JSON.stringify(lotesProveedores)},
            pageLength: 5,
            lengthMenu: [5, 10, 15, 20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
            },
            columns: [
                { data: 'numeroDeLote', title: 'Número de Lote' },
                { data: 'Laboratorio.nombreLaboratorio', title: 'Nombre del Laboratorio' },
                { data: 'tipoDeVacuna', title: 'Tipo de Vacuna' },
                { data: 'nombreComercial', title: 'Nombre Comercial de la Vacuna' },
                { data: 'cantidadDeLotesInternos', title: 'Cantidad de Lotes Internos' },
                { data: 'fechaDeFabricacion', title: 'Fecha de Fabricación' },
                { data: 'fechaDeVencimiento', title: 'Fecha de Vencimiento' },
                { data: 'fechaDeCompra', title: 'Fecha de Compra' },
                {
                    data: 'opciones', title: 'Opciones',
                    render: function(data, type, row) {
                        return `<button title="Editar" class="btn btn-success btn-sm fa-solid fa-pencil me-2"></button>` +
                            `<button title="Eliminar" class="btn btn-danger btn-sm fa-solid fa-trash-can"></button>`;
                    }
                }
            ],
            columnDefs: [
                {orderable: false, targets:[8]}, // Columna de "Opciones"
                {searchable: false, targets:[1, 2, 3]},
                {className: "dt-center", targets: [0, 1, 2, 3, 4, 5, 6, 7, 8]},
                { width: "10%", targets: [1, 5, 6, 7, 8] },
                { width: "5%", targets: [0] },
                { width: "10%", targets: [2, 3, 4] }
            ]
        });
    });
    $(document).ready(function() {
        $('.flash-message').addClass('fade-in');
        setTimeout(function() {
            $('.flash-message').removeClass('fade-in');
        }, 3000);

        tabla.on('click', 'button', function (f) {
            let data = tabla.row(f.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                $('#confirmDeleteModal').modal('show');
                $('#confirmDeleteBtn').on('click', function() {
            // Realizar la acción de eliminación
            $.ajax({
                url: '/lotesproveedores/' + data.numeroDeLote + '?_method=DELETE',
                type: 'POST',
                success: function(data) {
                    if (data.success) {
                        window.location.href = "/lotesproveedores";
                    } else {
                        console.error(data.message);
                        //window.location.href = "/lotesproveedores";
                    }
                },
                error: function(error) {
                    console.error(error);
                }
            });

            $('#confirmDeleteModal').modal('hide');
                });

                // Configurar el botón de cancelar y la 'X' para cerrar el modal
                $('#cancelDeleteBtn, .modal-header button.close').on('click', function() {
                    $('#confirmDeleteModal').modal('hide');
                });

                // Agregar evento al documento para escuchar la tecla 'Enter'
                $(document).on('keydown', function(e) {
                    if (e.key === 'Enter' && $('#confirmDeleteModal').is(':visible')) {
                        // Disparar el evento de click en el botón de confirmación
                        $('#confirmDeleteBtn').trigger('click');
                    }
                });
                    } else {
                        window.location.href = "/lotesproveedores/" + data.numeroDeLote;
                    }
                });

                // Configurar el botón de confirmar y la 'X' para cerrar el modal
            });
