- var title ='Actualizar Laboratorio'
include ..\includes\layout
block content
html(lang="es") 
    head
       style.
            #formLaboratorio {
                max-width: 600px;
                margin: auto;
            }
            h2 {
                text-align: center;
                text-decoration: underline;
                text-underline-offset: 4px;
                margin-top: 10px;
            }
            label {
                margin-bottom: 5px;
            }
    body
        #formLaboratorio
            h2.text-center Actualice el Laboratorio
            br
            form(action="/laboratorios/"+laboratorio.idLaboratorio+"?_method=PUT" method="post")
                .form-group
                    label.form-label(for="nombreLaboratorio") Nombre Laboratorio:
                    select.form-control#laboratorioSelect(name="nombreLaboratorio")
                        each lab in laboratorios
                            if laboratorio.idLaboratorio==lab.idLaboratorio
                                option(value=laboratorio.idLaboratorio selected)= lab.nombreLaboratorio
                        each lab in laboratorios
                            if laboratorio.idLaboratorio==lab.idLaboratorio
                                break
                            else
                                option(value=lab.idLaboratorio)= lab.nombreLaboratorio
                br
                .form-group
                    label.form-label(for="pais") País:
                    input.form-control(type="text" id="pais" name="pais" value=laboratorio.pais required)
                br
                .form-group
                    label.form-label(for="email") Email:
                    input.form-control(type="text" id="email" name="email" value=laboratorio.email required)
                br
                .form-group
                    label.form-label(for="telefono") Teléfono:
                    input.form-control(type="text" id="telefono" name="telefono" value=laboratorio.telefono required)
                br
                .form-group
                    label.form-label(for="longitud") Longitud:
                    input.form-control(type="text" id="longitud" name="longitud" value=laboratorio.longitud required)
                br
                .form-group
                    label.form-label(for="latitud") Latitud:
                    input.form-control(type="text" id="latitud" name="latitud" value=laboratorio.latitud required)
                br
                button(type="submit" class="btn btn-primary") Actualizar
                | &nbsp;&nbsp;&nbsp;&nbsp;
                button(type="button" class="btn btn-primary" onclick="window.history.back()") Volver