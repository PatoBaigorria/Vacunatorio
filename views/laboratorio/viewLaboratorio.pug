body
    div.container.my-4
      div.row
        div.col-sm-12.col-md-12.col-lg-12.col-xl-12
            section#viewLaboratorios
                h2 Listado de Laboratorios
                br
                div(style="text-align: left;")
                    a.btn.btn-primary.btn-lg(href="/laboratorios/alta") Alta
    
                    br
                    br
                    div.table.responsive
                        table#laboratorios.table.table-striped.table-bordered
                            thead
                                tr 
                                    th
                                    th Nombre del Laboratorio
                                    th País
                                    th Email
                                    th Telefono
                                    th Longitud
                                    th Latitud
                                    th Opciones
                //Bootstrap
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
            script(src='https://code.jquery.com/jquery-3.6.0.min.js')
            script(src="https://cdn.datatables.net/v/dt/dt-1.13.8/b-2.4.2/datatables.min.js")
    
script.
    //let table = new DataTable('#laboratorios');
    let labs = !{JSON.stringify(laboratorios)};
    let tabla 
    $(document).ready(function() {
       tabla = $('#laboratorios').DataTable({
            data: labs,
            pageLength:5,
            lengthMenu:[5,10,15,20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
            },
            columns:[
                {data: 'idLaboratorio',
                    visible: false,
                    searchable: false
                },
                {data: 'nombreLaboratorio'},
                {data: 'pais'},
                {data: 'email'},
                {data: 'telefono'},
                {data: 'longitud'},
                {data: 'latitud'},
                
                {
                    data: null,
                    render: function(data, type, row) {
                        return `<button class="btn btn-success btn-sm fa-solid fa-pencil me-2"></button>` +
                            `<button class="btn btn-danger btn-sm fa-solid fa-trash-can"></button>`;
                    }
                }
            ],
            columnDefs: [
                {orderable: false, targets:[7]}, // Columna de "Opciones"
                {searchable: false, targets:[5, 6, 7]},
                {className: "dt-center", targets: [7]},
                { width: '5%', targets: [0] },
                { width: '10%', targets: [4, 5, 6] },
                { width: '15%', targets: [1, 2, 3] }, // Ancho del 10% para la primera columna
                { width: '8%', targets: [7] },
            ]
        });
    });
    
    $(document).ready(function() {
        tabla.on('click', 'button', function (fila) {
            let data = tabla.row(fila.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                if(confirm("¿Desea eliminar el laboratorio?")){
                    $.post('/laboratorios/'+data.idLaboratorio+'?_method=DELETE', function(data){
                        window.location.href = "/laboratorios";
                    })
                }
            } else {window.location.href= "/laboratorios/" + data.idLaboratorio}
        })
    });
    
    function alta(){
        window.location.href= "/laboratorios/alta"
    }
    