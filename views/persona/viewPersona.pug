                        url: '/personas/'+data.DNI+'?_method=DELETE',
                        type: 'POST',
                        success: function(data) {
                            if (data.success) {
                                window.location.href = "/personas";
                            } else {
                                console.error(data.message);
                                window.location.href = "/personas";
                            }
                        },
                        error: function(error) {
                            console.error(error);
                        }
                    });
                }
            } else {window.location.href= "/personas/" + data.DNI}
