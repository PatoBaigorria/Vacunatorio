head
  title Persona

section#formPersona
  h2 Ingresar una Persona

  form(action="/guardar-persona" method="post")
    label(for="dni") DNI:
    input(type="text" id="dni" name="DNI" required)
    br
    br

    label(for="nombre") Nombre:
    input(type="text" id="nombre" name="nombre" required)
    br
    br

    label(for="apellido") Apellido:
    input(type="text" id="apellido" name="apellido" required)
    br
    br

    label(for="email") Email:
    input(type="text" id="email" name="email" required)
    br
    br

    label(for="fecha-nac") Fecha de Nacimiento:
    input(type="date" id="fecha-nac" name="fechadenacimiento" required)
    br
    br

    label(for="ocupacion") Ocupación:
    select(name="ocupacion" id="ocupacion" required)
      option(value="") Selecciona una Ocupacion:
      option(value="agenteDeSalud") Agente de Salud
      option(value="otro") Otra
    br
    br

    label Género:
    select(name="genero" required)
      option(value="masculino") Masculino
      option(value="femenino") Femenino
      option(value="otro") Otro
    br
    br

    label(for="longitud") Longitud:
    input(type="text" id="longitud" name="longitud" placeholder="Ej. 32.801725" required)
    br
    br

    label(for="latitud") Latitud:
    input(type="text" id="latitud" name="latitud" placeholder="Ej. -34.603722" required)
    br
    br

    button(type="submit") Guardar