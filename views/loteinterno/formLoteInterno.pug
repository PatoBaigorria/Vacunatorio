head
    title Lote Interno
section#formLoteInterno
h2 Ingresar Lotes Internos
form#myForm
form(action="/lotesinternos" method="post")
    label(for="idLaboratorio") Laboratorio:
        select#laboratorioSelect(name="idLaboratorio")
            option(value="") Selecciona un Laboratorio
                each lab in laboratorios
                    option(value=lab.idLaboratorio)= lab.nombreLaboratorio

    label(for="num-lote") Lote Proveedor:
        select#loteProveedorSelect(name="numeroDeLote")
            option(value="") Selecciona un Lote Proveedor
                each numLote in lotesProveedores
                    option(value=numLote.numeroDeLote)= numLote.numeroDeLote
    br
    br
    label(for="cant-vac") Cantidad de Vacunas:
    input(type="text" id="cant-vac" name="cantidadDeVacunas" required)
    br
    br
    label(for="id-deponac") Depósito Nacional:
        select#idDepositoNacional(name="idDepositoNacional")
            option(value="") Selecciona un Depósito Nacional
                each depnac in depositosNacionales
                    option(value=depnac.idDepositoNacional)= depnac.idDepositoNacional
                //option(value="null") Ningún deposito
    br
    br
    label(for="fecha-lleg-depos-nac") Fecha Llegada Depósito Nacional:
    input(type="date" id="fecha-lleg-depos-nac" name="fechaDeLlegadaDepositoNacional" class="fecha-llegada")
    label(for="fecha-salida-depos-nac") Fecha Salida Depósito Nacional:
    input(type="date" id="fecha-salida-depos-nac" name="fechaDeSalidaDepositoNacional" class="fecha-salida")

    br
    br
    label(for="id-depprov") Depósito Provincial:
        select#idDepositoProvincial(name="idDepositoProvincial")
            option(value="") Selecciona un Depósito Provincial
                each dprov in depositosProvinciales
                    option(value=dprov.idDepositoProvincial)= dprov.idDepositoProvincial
                //option(value="null") Ningún deposito
    br
    br
    label(for="fecha-lleg-depos-prov") Fecha Llegada Depósito Provincial:
    input(type="date" id="fecha-lleg-depos-prov" name="fechaDeLlegadaDepositoProvincial")
    label(for="fecha-salida-depos-prov") Fecha Salida Depósito Provincial:
    input(type="date" id="fecha-salida-depos-prov" name="fechaDeSalidaDepositoProvincial")
    br
    br
    label(for="id-ctrovac") Centro de Vacunacion:
        select#idCentroDeVacunacion(name="idCentroDeVacunacion")
            option(value="") Selecciona un Centro de Vacunación
                each cvac in centrosDeVacunaciones
                    option(value=cvac.idCentroDeVacunacion)= cvac.idCentroDeVacunacion
                //option(value="null") Ningún centro
    br
    br           
    label(for="fecha-lleg-ctro-vac") Fecha Llegada Centro Vacunación:
    input(type="date" id="fecha-lleg-ctro-vac" name="fechaDeLlegadaCentroDeVacunacion")
    br
    br
    button(type="submit") Guardar
