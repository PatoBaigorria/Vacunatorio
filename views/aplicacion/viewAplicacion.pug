- var title = 'Listado de las aplicaciones'
include ..\includes\layout
block content
body
    div.container.my-4
        div.row
            div.col-sm-12.col-md-12.col-lg-12.col-xl-12
                section#viewAplicaciones
                    h2 Listado de las aplicaciones
                    br
                    if messages.success
                        .alert.alert-success
                            = messages.success
                    if messages.error
                        .alert.alert-danger.flash-message.fade-in
                            = messages.error
                    div.modal#confirmDeleteModal(tabindex="-1" role="dialog")
                        div.modal-dialog(role="document")
                            div.modal-content
                                div.modal-header
                                    h5.modal-title Confirmar la baja de la aplicación de la vacuna
                                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                                        span(aria-hidden="true") &times;
                                    div.modal-body
                                        p#mensajeAlerta ¿Está seguro que desea dar de baja esta aplicación de vacuna?
                                    div.modal-footer
                                        button.btn.btn-secondary(id="cancelDeleteBtn" type="button" data-dismiss="modal") Cancelar
                                        button.btn.btn-danger(id="confirmDeleteBtn" type="button") Confirmar 
                    div(style="text-align: left;")
                        a.btn.btn-primary.btn-lg(href="/aplicaciones/crear") Crear
                        br
                        br
                        div.table.responsive
                            table#aplicaciones.table.table-striped.table-bordered
script.
    let tabla 
    $(document).ready(function() {
        tabla = $('#aplicaciones').DataTable({
            data: !{JSON.stringify(aplicaciones)},
            pageLength:5,
            lengthMenu:[5,10,15,20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
            },
            columns:[
                {data: 'idAplicacion', title: 'ID de la Aplicación'},
                {data: 'Persona.nombre', title: 'Nombre del Paciente'},
                {data: 'Persona.apellido', title: 'Apellido del Paciente'},
                {data: 'Agentedesalud.Persona.nombre', title: 'Nombre del Agente de Salud'},
                {data: 'Agentedesalud.Persona.apellido', title: 'Apellido del Agente de Salud'},
                {data: 'Loteinterno.numeroDeSerie', title: 'Número de Serie de la Vacuna'},
                {data: 'fechaDeAplicacion', title: 'Fecha de Aplicacion'},
                {
                    data: 'opciones', title: 'Opciones',
                    render: function(data, type, row) {
                        return `<button title="Editar" class="btn btn-primary btn-sm fa-solid fa-pencil me-2"></button>
                        <button class="btn btn-success btn-sm fa-solid fa-check-circle"></button>`;
                    }
                }
            ],
            columnDefs: [
                {orderable: false, targets:[7]}, // Columna de "Opciones"
                {className: "dt-center", targets: [0, 1, 2, 3, 4, 5, 6, 7]},
                { width: '12%', targets: [0, 1, 2] },
                { width: '14%', targets: [3, 4, 5] },	
                { width: '10%', targets: [6] },
            ]
        });

        $('.flash-message').addClass('fade-in');
        setTimeout(function() {
            $('.flash-message').removeClass('fade-in');
        }, 3000);

        tabla.on('click', 'button', function (f) {
            let data = tabla.row(f.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                $('#confirmDeleteModal').modal('show');
                $('#confirmDeleteBtn').on('click', function() {
            // Realizar la acción de eliminación
                    $.ajax({
                        url: '/aplicaciones/' + data.idAplicacion + '?_method=DELETE',
                        type: 'POST',
                        success: function(data) {
                            if (data.success) {
                                window.location.href = "/aplicaciones";
                            } else {
                                console.error(data.message);
                            }
                        },
                        error: function(error) {
                            console.error(error);
                        }
                    });

                    $('#confirmDeleteModal').modal('hide');
                });

                $('#cancelDeleteBtn, .modal-header button.close').on('click', function() {
                    $('#confirmDeleteModal').modal('hide');
                });

                $(document).on('keydown', function(e) {
                    if (e.key === 'Enter' && $('#confirmDeleteModal').is(':visible')) {
                        // Disparar el evento de click en el botón de confirmación
                        $('#confirmDeleteBtn').trigger('click');
                    }
                });
            } else {
                window.location.href = "/aplicaciones/" + data.idAplicacion;
            }
        });
    });