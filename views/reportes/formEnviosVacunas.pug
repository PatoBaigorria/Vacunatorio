- const title = 'Reporte Vacunas Enviadas'
include ..\includes\layout
block content

    .container.mt-4
        .row.justify-content-center
            .col-md-5
                h2(style="white-space: nowrap;") Completa los filtros para el reporte de envíos de vacunas
                .row.mb-3
                form(action="/reportes/enviosvacunas" method="get")
                    .form-group
                        label.form-label(for="fechaInicio") Fecha de Inicio:
                        input.form-control(type="date" name="fechaInicio" id="fechaInicio" required)
                    .form-group
                        label.form-label(for="fechaFin") Fecha de Fin:
                        input.form-control(type="date" name="fechaFin" id="fechaFin" required)
                    .form-group
                        label(for="filtro") Filtro:
                            select.form-select(name="filtro" id="filtro" required)
                                option(value="idCentroDeVacunacion") Centro de Vacunación
                                option(value="provincia") Provincia
                                option(value="localidad") Localidad
                                

                    .form-group
                        label(for="valor") Valor:
                            input.form-control(type="text" name="valor" id="valor" required)

                    .text-center.mt-4
                        button.btn.btn-primary(type="submit") Generar Reporte
