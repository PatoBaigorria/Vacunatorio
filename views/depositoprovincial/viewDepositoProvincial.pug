script.
    let depprov = !{JSON.stringify(depositosProv)};
    let dpt 
    $(document).ready(function() {
        dpt = $('#depositosprovinciales').DataTable({
            data: depprov,
            pageLength:5,
            lengthMenu:[5,10,15,20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
            },
            columns:[
                {data: 'idDepositoProvincial', title: 'ID Depósito Provincial'},
                {data: 'longitud', title: 'Longitud'},
                {data: 'latitud', title: 'Latitud'},

                {
                    data: null, title: 'Opciones',
                    render: function(data, type, row) {
                        return `<button class="btn btn-success btn-sm fa-solid fa-pencil me-2"></button>` +
                            `<button class="btn btn-danger btn-sm fa-solid fa-trash-can"></button>`;
                    }
                }
            ],
            columnDefs: [
                {orderable: false, targets:[3]}, // Columna de "Opciones"
                {searchable: false, targets:[1, 2, 3]},
                {className: "dt-center", targets: [0, 1, 2, 3]},
                { width: '25%', targets: [0, 1, 2] },
                { width: '20%', targets: [3] },
            ]
        });
    });
    $(document).ready(function() {
        dpt.on('click', 'button', function (f) {
            let data = dpt.row(f.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                if(confirm("¿Desea eliminar el Deposito Provincial?")){
                    $.post('/depositosprovinciales/'+data.idDepositoProvincial+'?_method=DELETE', function(data){
                         window.location.href = "/depositosprovinciales";
                    })
                }
            } else {window.location.href= "/depositosprovinciales/" + data.idDepositoProvincial}
        })
    });
    function alta(){
        window.location.href= "/depositosprovinciales/alta"
    }
