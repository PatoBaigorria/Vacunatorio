                li
                  a.nav-link.text-light(href="/lotesproveedores") Proveedores
            li.nav-item
              a.nav-link.text-light(href="/registros") 
                i.fas.fa-clipboard-list
                |  Registros
            li.nav-item
              a.nav-link.text-light(href="/usuarios") 
                i.fas.fa-users-cog
                |  Usuarios
          else if user.rol === 'Gestor de compras'
            li.nav-item
              a.nav-link.text-light(href="/laboratorios") 
                i.fas.fa-flask
                |  Laboratorios
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle.text-light#toggleLotes(data-bs-toggle="dropdown" data-bs-target="lotes" aria-haspopup="true" aria-expanded="false") 
                i.fas.fa-boxes
                |  Lotes
              ul.dropdown-menu.bg-dark#lotes(aria-labelledby="toggleLotes")
                li
                  a.nav-link.text-light(href="/lotesinternos") Internos
                li
                  a.nav-link.text-light(href="/lotesproveedores") Proveedores
          else if user.rol === 'Operador de logistica'
            li.nav-item
              a.nav-link.text-light(href="/traslados") 
                i.fas.fa-truck
                |  Traslados
            li.nav-item
              a.nav-link.text-light(href="/descartes") 
                i.fas.fa-trash-alt
                |  Descartes
          else if user.rol === 'Agente de salud'
            li.nav-item
              a.nav-link.text-light(href="/aplicaciones") 
                i.fas.fa-syringe
                |  Aplicaciones
            li.nav-item
              a.nav-link.text-light(href="/personas") 
                i.fas.fa-users
                |  Personas
            li.nav-item
              a.nav-link.text-light(href="/descartes") 
                i.fas.fa-trash-alt
                |  Descartes
        if user
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.text-light#toggleBienvenido(data-bs-toggle="dropdown" aria-expanded="false")
              i.fas.fa-user-tie
              |  Bienvenid@ #{user.nombreUsuario} (#{user.rol})
            ul.dropdown-menu.dropdown-menu-end.bg-dark
              li
                a.nav-link.text-light(href="/logout") Cerrar Sesión
