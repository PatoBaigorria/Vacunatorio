      ul.navbar-nav.mx-auto
        li.nav-item
          a.nav-link.text-light(href="/") 
            i.fas.fa-home
            |  Inicio
        if isAuthenticated
          if user.rol === 'Super Admin'
            li.nav-item
              a.nav-link.text-light(href="/personas") 
                i.fas.fa-users
                |  Personas
            li.nav-item
              a.nav-link.text-light(href="/laboratorios") 
                i.fas.fa-flask
                |  Laboratorios
            li.nav-item
              a.nav-link.text-light(href="/centrosdevacunacion") 
