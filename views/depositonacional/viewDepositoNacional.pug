    let dnt 
    $(document).ready(function() {
        dnt = $('#depositosnacionales').DataTable({
            data: depnac,
            pageLength:5,
            lengthMenu:[5,10,15,20],
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-AR.json'
