                {data: 'latitud', title: 'Latitud'},

                {
                    data: null, title: 'Opciones',
                    render: function(data, type, row) {
                        return `<button class="btn btn-success btn-sm fa-solid fa-pencil me-2"></button>` +
                            `<button class="btn btn-danger btn-sm fa-solid fa-trash-can"></button>`;
                    }
                }
            ],
            columnDefs: [
                {orderable: false, targets:[3]}, // Columna de "Opciones"
                {searchable: false, targets:[1, 2, 3]},
                {className: "dt-center", targets: [0, 1, 2, 3]},
                { width: '25%', targets: [0, 1, 2] },
                { width: '20%', targets: [3] },
            ]
        });
    });
    $(document).ready(function() {
        dnt.on('click', 'button', function (f) {
            let data = dnt.row(f.target.closest('tr')).data();
            if ($(event.target).hasClass('fa-trash-can')) {
                if(confirm("¿Desea eliminar el Deposito Nacional?")){
                    $.post('/depositosnacionales/'+data.idDepositoNacional+'?_method=DELETE', function(data){
                         window.location.href = "/depositosnacionales";
                    })
                }
            } else {window.location.href= "/depositosnacionales/" + data.idDepositoNacional}
        })
    });
